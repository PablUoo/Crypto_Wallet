<p><strong>Data:</strong><%= date_br(Date.today) %></p>        
<%= link_to "Home" , welcome_index_path %>
<h1>Coins</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Codigo</th>
      <th>Imagem</th>
      <th>Data de criação</th>
      <th></th>
      <th>Data de update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, size: "30x30" %> </td>
        <td> <%= coin.created_at.to_s(:data_Formatada) %> </td>
        <td></td>
        <td> <%= coin.updated_at.to_s(:data_Formatada) %> </td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'x', coin, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Coin', new_coin_path %>

